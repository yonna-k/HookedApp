<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:background="#cbe0f2"
    android:layout_height="wrap_content"
    android:paddingBottom="30dp">

    <TextView
        android:id="@+id/gridtitle_saved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center|top"
        android:text="TITLE"
        android:textColor="#1D6095"
        android:textSize="30sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView

        android:layout_width="160dp"
        android:layout_height="150dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp" >

        <ImageView
            android:id="@+id/gridimage_saved"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/star_pink"
            android:scaleType="centerCrop"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pfp_saved"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/rounded_profile_blue"
            app:srcCompat="@drawable/star_pink" />

        <TextView
            android:id="@+id/username_saved"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:gravity="center"
            android:fontFamily="sans-serif-condensed"
            android:text="example"
            android:textColor="#1D6095"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"

        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/pattern_button_saved"
            android:layout_marginStart="20dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/pattern_blue"
            android:contentDescription="pattern" />

        <ImageButton
            android:id="@+id/removebutton_saved"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/remove_saved"
            android:contentDescription="pattern" />

    </LinearLayout>


</LinearLayout>