<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_profile"
    android:backgroundTint="#cf76c4"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:fontFamily="sans-serif-condensed"
        android:text="ENTER YOUR PATTERN BELOW!"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/pattern_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="500dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_profile"
        android:backgroundTint="#f2d5ef"
        android:fontFamily="sans-serif-condensed"
        android:hint="ENTER PATTERN TEXT"
        android:paddingHorizontal="10dp"
        android:textAlignment="textStart"
        android:textColor="#73366B"
        android:textColorHint="#73366B"
        android:textSize="25sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="7dp">

        <Button
            android:id="@+id/cancel_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_profile"
            android:backgroundTint="#f2d5ef"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#73366B"
            android:text="CANCEL" />

        <Button
            android:id="@+id/done_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_profile"
            android:backgroundTint="#f2d5ef"
            android:layout_marginEnd="5dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#73366B"
            android:text="DONE" />
    </LinearLayout>

</LinearLayout>